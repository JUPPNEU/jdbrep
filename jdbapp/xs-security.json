  "xsappname":"jdbapp",
  "tenant-mode":"dedicated",
  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.us10-001.hana.ondemand.com/**"
    ]
  },       
  "scopes": [
    {
      "name": "$XSAPPNAME.Vendor",
      "description": "Vendor"
    },
    {
      "name": "$XSAPPNAME.ProcurementManager",
      "description": "ProcurementManager"
    },
    {
      "name": "$XSAPPNAME.jobscheduler",
      "description": "SAP Job Scheduling service Scope",
      "grant-as-authority-to-apps": [
      "$XSSERVICENAME(jobscheduler)" ]
     }
  ],
  "attributes": [],
  "role-templates": [
    {
      "name": "Vendor",
      "description": "generated",
      "scope-references": [
        "$XSAPPNAME.Vendor"
      ],
      "attribute-references": []
    },
    {
      "name": "jobscheduler",
      "description": "generated",
      "scope-references": [
        "$XSAPPNAME.jobscheduler"
      ],
      "attribute-references": []
    },
    {
      "name": "ProcurementManager",
      "description": "generated",
      "scope-references": [
        "$XSAPPNAME.ProcurementManager"
      ],
      "attribute-references": []
    }
  ]
}
